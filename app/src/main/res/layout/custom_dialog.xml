<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/head_line_text_view_custom_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="מחיקת ספק"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/bellefair"
        android:textSize="22sp"
        android:textColor="#000000"/>


    <TextView
        android:id="@+id/sub_line_text_view_custom_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="האם אתה בטוח למחוק ספק זה?"
        android:textSize="18sp"
        android:fontFamily="@font/bellefair"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:textColor="#000000"
        />


    <EditText
        android:id="@+id/password_edit_text_custom_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:hint="הכנס סיסמא"
        android:gravity="center"
        android:fontFamily="@font/bellefair"
        android:layout_marginTop="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:weightSum="2">

        <Button
            android:id="@+id/no_delete_custom_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="לא"
            android:background="@drawable/custom_background"
            android:textColor="#2899ff"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/yes_delete_custom_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="כן"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/custom_background"
            android:textColor="#2899ff"
            android:layout_weight="1"/>




    </LinearLayout>

</LinearLayout>